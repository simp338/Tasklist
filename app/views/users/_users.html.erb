<% if users.any? %>
  <ul class="media-list">
    <%= users.each do |user| %>
    <li class="media">
      <div "media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""> 
      </div>
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to "ユーザの詳細", user %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>