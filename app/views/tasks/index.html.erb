<h1>タスク一覧</h1>
  
<table class="table">
  <tr>
    <th>id</th>
    <th>タスク</th>
    <th>状態</th>
  </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
    <% end %>
</table>

<%= paginate @tasks %>

<%= link_to "タスクを登録", new_task_path, class:"btn btn-primary" %>