<div class="text-center">
  <h1>タスク一覧</h1>
</div>

<div class="alt-table-responsive">
  
<table class="table">
  <tr>
    <th>作成日時</th>
    <th>タスク（未処理：<%= @counts_tasks["未処理"] %>件、保留中：<%= @counts_tasks["保留中"] %>件）</th>
    <th>状態</th>
  </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.created_at, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
    <% end %>
</table>

  <%= paginate @tasks %>

  <%= link_to "タスクを登録", new_task_path, class:"btn btn-primary" %>    

</div>    