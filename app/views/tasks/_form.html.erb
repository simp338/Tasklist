<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <ul>
      <li>
        <% task.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </li>
    </ul>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  <%= f.label :status, "状態" %>
  <%= f.select :status, ["未処理", "保留中", "完了済"] %>
  
  <%= f.submit "登録" %>
<% end %>